<div class="settings-form__image">
  <div class="input-group">
    {{image-drop
      hoverText="Change your project logo."
      large=true
      onDone=(action uploadDone)
      onError=(action uploadErrored)
      onStart=(action uploadStarted)
      originalImage=project.iconLargeUrl
    }}
  </div>
</div>

<div class="settings-form__form">
  <div class="input-group">
    <div class="input-label">
      <label>
        <span class="input-label__text">Project title</span>
      </label>
    </div>
    {{input type="text" name="title" value=project.title}}
  </div>
  <div class="input-group">
    <div class="input-label">
      <label>
        <span class="input-label__text">Description</span>
      </label>
    </div>
    {{input type="text" name="description" value=project.description}}
  </div>
  <div class="input-group">
    <div class="input-label">
      <label>
        <span class="input-label__text">Website</span>
      </label>
    </div>
    {{input type="text" name="website" value=project.website}}
  </div>

  <div class="input-group">
    <button class="save default" {{action 'save'}}>Update Settings</button>
  </div>
</div>
