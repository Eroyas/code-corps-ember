  <div class="github-repo__name" data-test-github-repo-name>{{name}}</div>
  <div class="github-repo__actions" data-test-github-repo-actions>
    {{#common/busy-model-wrapper
      model=projectGithubRepo
      onSaving='Connecting...'
      onDeleting='Disconnecting...'
