{{#freestyle-guide
  title="Ember Freestyle"
  subtitle="Living Style Guide"
  }}

  {{#freestyle-section name="Donation" as |section|}}

    {{#section.subsection name="Card Item"}}
      {{#freestyle-usage "card-item" name="Card Item"}}
        {{donation/card-item card=card}}
      {{/freestyle-usage}}
    {{/section.subsection}}

    {{#section.subsection name="Card Logos"}}
      {{#freestyle-collection title="Card Logos " defaultKey="all" inline=true as |collection|}}
        {{#collection.variant key="American Express"}}
          {{#freestyle-usage "card-logo-american-express" title="American Express Logo"}}
            {{donation/card-logo brand="American Express"}}
          {{/freestyle-usage}}
        {{/collection.variant}}

        {{#collection.variant key="Diners Club"}}
          {{#freestyle-usage "card-logo-diners-club" title="Diners Club"}}
            {{donation/card-logo brand="Diners Club"}}
          {{/freestyle-usage}}
        {{/collection.variant}}

        {{#collection.variant key="Discover"}}
          {{#freestyle-usage "card-logo-discover" title="Discover"}}
            {{donation/card-logo brand="Discover"}}
          {{/freestyle-usage}}
        {{/collection.variant}}

        {{#collection.variant key="JCB"}}
          {{#freestyle-usage "card-logo-jcb" title="JCB"}}
            {{donation/card-logo brand="JCB"}}
          {{/freestyle-usage}}
        {{/collection.variant}}

        {{#collection.variant key="MasterCard"}}
          {{#freestyle-usage "card-logo-mastercard" title="MasterCard"}}
            {{donation/card-logo brand="MasterCard"}}
          {{/freestyle-usage}}
        {{/collection.variant}}

        {{#collection.variant key="Visa"}}
          {{#freestyle-usage "card-logo-visa" title="Visa"}}
            {{donation/card-logo brand="Visa"}}
          {{/freestyle-usage}}
        {{/collection.variant}}

        {{#collection.variant key="Unknown"}}
          {{#freestyle-usage "card-logo-unknown" title="Unknown"}}
            {{donation/card-logo brand="Unknown"}}
          {{/freestyle-usage}}
        {{/collection.variant}}

      {{/freestyle-collection}}
    {{/section.subsection}}

    {{#section.subsection name="Donation Container"}}
      {{#freestyle-note "donation-container--notes"}}
        ```
        card: {
          id: 1, brand: 'Visa', last4: 4242, expMonth: '01', expYear: '2022'
        },
        saveAndDonateHandler() {},
        donateHandler() {},
        ```
      {{/freestyle-note}}
      {{#freestyle-usage "donation-container" title="Donation Container"}}
        {{donation/donation-container
          card=card donate=donateHandler donationAmount=100
          isProcessing=isProcessing projectTitle=projectTitle saveAndDonate=saveAndDonateHandler }}
      {{/freestyle-usage}}
    {{/section.subsection}}

    {{#section.subsection name="Project Header"}}
      {{#freestyle-usage "project-header" title="Project Header"}}
        {{donation/project-header project=project}}
      {{/freestyle-usage}}
    {{/section.subsection}}
  {{/freestyle-section}}

  {{!-- {{#freestyle-section name="Visual Style" as |section|}}

    {{#section.subsection name="Typography"}}

      {{#freestyle-usage "typography-times" title="Times New Roman"}}
        {{freestyle-typeface fontFamily="Times New Roman"}}
