<div class="container">
  <div class="panel">
    <section>
      <aside>
        <h3>Project details</h3>
        <p>Manage your project's details like your icon, name, and description.</p>
      </aside>
      <section>
        {{project-settings-form project=project}}
      </section>
    </section>
  </div>

  <div class="panel">
    <section>
      <aside>
        <h3>Categories</h3>
        <p>Change your project's categories.</p>
      </aside>
      <section>
        {{category-checkboxes
          options=categories
          selection=project.categories
          updateCategories=(action updateCategories)
        }}
      </section>
    </section>
  </div>

  <div class="panel">
    <section>
      <aside>
        <h3>Skills</h3>
        <p>What skills does your project require? These help contributors find your project and tasks they can accomplish.</p>
      </aside>
      <section>
        <div class="skills-typeahead-container">
          {{skills-typeahead
            centered=true
            selectSkill=(action toggleSkill)
            skillsList=projectSkillsList
          }}
        </div>
        <div class="project-skills-list">
          {{#each project.projectSkills as |projectSkill|}}
            {{skill-button
              alwaysShowX=true
              iconBefore=false
              isLoading=projectSkill.isLoading
              remove=(action removeProjectSkill projectSkill)
              size="normal"
              skill=projectSkill.skill
            }}
          {{/each}}
        </div>
      </section>
    </section>
  </div>
</div>
