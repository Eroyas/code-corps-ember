<div>
  <h2 data-test-event-title>{{model.eventType}} {{model.action}}</h2>
  <div>{{moment-format model.insertedAt 'MM/DD/YYYY hh:mm:ss'}}</div>
</div>

<div>
  <h4>Summary</h4>
  <div>ID <code data-test-github-delivery-id>{{model.githubDeliveryId}}</code></div>
  <div>Time <span data-test-time>{{moment-format model.insertedAt 'MM/DD/YYYY hh:mm:ss'}}</span></div>
  <div>Status <code data-test-status class="{{model.status}}">{{model.status}}</code></div>
  {{#if model.failureReason}}
    <div>Failure reason <code data-test-failure-reason>{{model.failureReason}}</code></div>
  {{/if}}
</div>

<div>
  <div class="github-event__title">
    <span>
      <h4>Payload</h4>
      <span>{{code-theme-selector}}</span>
    </span>
    <span>
      {{#if (eq model.status "errored")}}
        <button class="button clear small" {{action "retry"}}>{{fa-icon "refresh"}} Retry event</button>
      {{/if}}
    </span>
  </div>
  <pre data-test-payload>{{model.prettyPayload}}</pre>
</div>

{{#if model.error}}
  <div>
    <h4>Error</h4>
    <p>The error that prevented the webhook from syncing.</p>
    <pre data-test-error>{{model.error}}</pre>
  </div>
{{/if}}

{{#if model.recordData}}
  <div>
    <h4>Data</h4>
    <p>The record's data prior to the sync attempt.</p>
    <pre data-test-record-data>{{model.recordData}}</pre>
  </div>
{{/if}}
